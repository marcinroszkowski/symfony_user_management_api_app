{% extends 'base.html.twig' %}

{% block body %}
    <h1>Index</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% if not app.user %}
        <a href="{{ path('registration_index') }}"><strong>Register</strong></a>
        <a href="{{ path('app_login') }}"><strong>Login</strong></a>
    {% else %}
        <h2>Welcome <strong>{{ app.user.username }}<strong></h2>
        <h2>Your API Token is: <strong>{{ app.user.apiToken }}</strong></h2>
        <a href="{{ path('app_logout') }}"><strong>Logout</strong></a>
    {% endif %}
{% endblock %}